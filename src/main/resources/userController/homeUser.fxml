<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="768.0" prefWidth="1224.0" stylesheets="@../styles/homeUserStyles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userController.HomeUserController">
    <children>
        <!-- Search Bar -->
        <HBox layoutX="37.0" layoutY="169.0" spacing="10">
            <TextField fx:id="searchField" prefHeight="34.0" prefWidth="361.0" promptText="Enter book id, book title, author, publisher, genre..." />
            <Button fx:id="searchButton" onAction="#handleSearch" text="Search" />
        </HBox>

        <TableView fx:id="bookTable" layoutX="37.0" layoutY="224.0" prefHeight="384.0" prefWidth="1150.0">
            <columns>
                <TableColumn fx:id="idColumn" minWidth="1.5999755859375" prefWidth="129.3333396911621" text="ID" />
                <TableColumn fx:id="nameColumn" minWidth="1.5999755859375" prefWidth="126.66668701171875" text="Tên" />
                <TableColumn fx:id="imageColumn" prefWidth="135.33328247070312" text="Ảnh" />
                <TableColumn fx:id="authorColumn" prefWidth="196.0" text="Tác giả" />
                <TableColumn fx:id="publisherColumn" prefWidth="219.333251953125" text="NXB" />
                <TableColumn fx:id="genreColumn" minWidth="0.0" prefWidth="202.66668701171875" text="Thể loại" />
                <TableColumn fx:id="quantityColumn" prefWidth="108.0" text="Số lượng" />
                <TableColumn fx:id="pageColumn" prefWidth="108.0" text="Số trang" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Action Buttons -->
        <HBox layoutX="899.0" layoutY="171.0" spacing="10" />
      <Button layoutX="19.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleSwitchPage1" opacity="0.0" prefHeight="41.0" prefWidth="178.0" style="-fx-background-radius: 20;" text="Button" />
      <Button layoutX="221.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleSwitchPage2" opacity="0.0" prefHeight="41.0" prefWidth="178.0" style="-fx-background-radius: 20;" text="Button" />
      <Button layoutX="422.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleSwitchPage3" opacity="0.0" prefHeight="41.0" prefWidth="178.0" style="-fx-background-radius: 20;" text="Button" />
      <Button layoutX="624.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleSwitchPage4" opacity="0.0" prefHeight="41.0" prefWidth="178.0" style="-fx-background-radius: 20;" text="Button" />
      <Button layoutX="825.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleSwitchPage5" opacity="0.0" prefHeight="41.0" prefWidth="178.0" style="-fx-background-radius: 20;" text="Button" />
      <Button layoutX="1027.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleLogout" opacity="0.0" prefHeight="41.0" prefWidth="178.0" style="-fx-background-radius: 20;" text="Button" />
      <Button fx:id="detailButton" layoutX="1117.0" layoutY="171.0" onAction="#handleDetail" text="Detail" />
      <Button fx:id="borrowButton" layoutX="1037.0" layoutY="171.0" onAction="#handleBorrow" text="Mượn" />
    </children>
</AnchorPane>
